<core:FragmentDefinition
	xmlns="sap.ui.comp.valuehelpdialog"
	xmlns:m="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core">
	<ValueHelpDialog id="dialogId"
		title="{i18n>dialogTitle}"
		ok=".onValueHelpOkPress"
		cancel=".onValueHelpCancelPress"
		supportRanges="true"
        supportMultiselect="false"
		key="ProductCode"
		descriptionKey="ProductName">
		<filterBar>
			<fb:FilterBar id="filterBarId" advancedMode="true" search=".onFilterBarSearch" isRunningInValueHelpDialog="true">
				<fb:filterGroupItems>
					<fb:FilterGroupItem id="filterGroupId1"
						groupName="__$INTERNAL$"
						name="tplnr"
						label="Functional Location"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input id="inputId1" name="tplnr" />
						</fb:control>
					</fb:FilterGroupItem>
                    <fb:FilterGroupItem id="filterGroupId2"
						groupName="__$INTERNAL$"
						name="street"
						label="Street"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input id="inputId2" name="street" />
						</fb:control>
					</fb:FilterGroupItem>
                    <fb:FilterGroupItem id="filterGroupId3"
						groupName="__$INTERNAL$"
						name="houseNum"
						label="House Number"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input id="inputId3" name="houseNum" />
						</fb:control>
					</fb:FilterGroupItem>
                     <fb:FilterGroupItem id="filterGroupId4"
						groupName="__$INTERNAL$"
						name="plz"
						label="plz"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input id="inputId4" name="plz" />
						</fb:control>
					</fb:FilterGroupItem>
                    <fb:FilterGroupItem id="filterGroupId5"
						groupName="__$INTERNAL$"
						name="Ort"
						label="Ort"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input id="inputId5" name="Ort" />
						</fb:control>
					</fb:FilterGroupItem>
                    <fb:FilterGroupItem id="filterGroupId6"
						groupName="__$INTERNAL$"
						name="ObjectNumber"
						label="ObjectNumber"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input id="inputId6" name="ObjectNumber" />
						</fb:control>
					</fb:FilterGroupItem>
                    <fb:FilterGroupItem id="filterGroupId7"
						groupName="__$INTERNAL$"
						name="parnr"
						label="Number of Contact Person"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input id="inputId7" name="parnr" />
						</fb:control>
					</fb:FilterGroupItem>

				</fb:filterGroupItems>
			</fb:FilterBar>
		</filterBar>
	</ValueHelpDialog>
</core:FragmentDefinition>
